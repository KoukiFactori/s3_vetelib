{% extends 'base.html.twig' %}
{% set hide_navbar = true %}

{% block stylesheets %}
	<link rel="stylesheet" href={{ asset('css/login.css') }}>
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
	<header class="header__bar">
		<nav>
			<ul>
				<li><a href={{ path('app_index') }}>Accueil</a></li>
			</ul>
		</nav>
	</header>

	<div class="form__container">
		<div class="logo"><img src={{ asset('image/cat.png')}} alt="Cat icon"></div>

		<h1>Connectez-vous</h1>

		<form class="form_login" method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<div class="field">
				<label for="inputEmail">Adresse mail</label>
				<input type="email" placeholder="Adresse Mail:" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			</div>
			<div class="field">
				<label for="inputPassword">Mot de passe</label>
				<input type="password" placeholder="Mot de passe:" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>            
			</div>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
					Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					See https://symfony.com/doc/current/security/remember_me.html
			
					<div class="checkbox mb-3">
						<label>
							<input type="checkbox" name="_remember_me"> Remember me
						</label>
					</div>
				#}

			<button class="btn btn-lg btn-primary" type="submit">
				Se connecter
			</button>

			<div class="txt_register"><a href={{ path('app_register', { query: })}}>S'inscrire</a></div>
		</form>
	</div>
{% endblock %}
