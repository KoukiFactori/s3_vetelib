{% extends 'client/layout/base.html.twig' %}

{% block title %}Informations client
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/css/client/informations.css">
{% endblock %}

{% block body %}

	<div class="bloc_contenu">
		<div class="fond_blanc">
			<div class="arrondi_deco">Mes informations</div>
			<div class="formulaire">
			
				{{ form_start(form) }}
				{{ form_errors(form) }}
				<div class="formulaire_lastname">
					{{ form_label(form.lastname) }}
					<div class="formulaire_lastname_widget">
						{{ form_widget(form.lastname) }}
					</div>
				</div>
				<div class="formulaire_firstname">
					{{ form_label(form.firstname) }}
					<div class="formulaire_firstname_widget">
						{{ form_widget(form.firstname) }}
					</div>
				</div>
				<div class="formulaire_email">
					{{ form_label(form.email) }}
					<div class="formulaire_email_widget">
						{{ form_widget(form.email) }}
					</div>
				</div>
				<div class="formulaire_phone">
					{{ form_label(form.phone) }}
					<div class="formulaire_phone_widget">
						{{ form_widget(form.phone) }}
					</div>
				</div>
				<div class="formulaire_birthdate">
					{{ form_label(form.birthdate) }}
					<div class="formulaire_birthdate_widget">
						{{ form_widget(form.birthdate) }}
					</div>
				</div>
				<div class="formulaire_city">
					{{ form_label(form.city) }}
					<div class="formulaire_city_widget">
						{{ form_widget(form.city) }}
					</div>
				</div>
				<div class="formulaire_zipcode">
					{{ form_label(form.zipcode) }}
					<div class="formulaire_zipcode_widget">
						{{ form_widget(form.zipcode) }}
					</div>
				</div>
				<div class="formulaire_address">
					{{ form_label(form.address) }}
					<div class="formulaire_address_widget">
						{{ form_widget(form.address) }}
					</div>
				</div>

			</div>

		</div>
		<button type="submit">Enregistrer</button>
		{{ form_end(form) }}
	</div>

{% endblock %}
