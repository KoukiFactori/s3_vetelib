{% extends 'base.html.twig' %}

{% block title %}Page de rendez vous client{% endblock %}
{% block javascripts%}
	<script src="{{asset('js/client/animalAppointments.js')}}" defer></script>
{% endblock %}
{% block body %}
	<div class="scrolling">
		<div class="nav_animal">
			{% for appointment in appointments %}
				

				<div class="animals">
					<a href="#" class="animal-link" data-id="{{appointment.id}}">
						<div class="decoration">
							<h1>Rendez vous à venir</h1>
							{# <img src="{{asset('images/'{{animal.espece}}'.png')}}>"#}
						</div>
						<h2>Dr.{{ appointment.veterinaire.name }} {{appointment.veterinaire.lastname}}</h2>
						<h2>{{appointment.date}}</h2>
					</a>
				</div>

			{% endfor %}

		</div>
	</div>
	<br>
	<br>
	<div class="main-content">
		<div class="decoration_bloc_principal">
			<h1 class="name"></h1>
            <h1 class="Date"></h1>
		</div>
		<h1 class="species">{# <img src="{{asset('images/'{{animal.espece}}'.png')}}>"#}</h1>
		<br>
		<br>
		<h1>
			Nom de l'animal :
		</h1>
		<p class="name"></p>
		<br>
		<h1>
			Sujet du rendez vous :
		</h1>
		<p class="rendez vous"></p>
		<br>
		<div class="line"></div>
		<br>
		<br>
		<br>

		<button class="delete" onclick="return confirm('Êtes vous sur de vouloir supprimer votre rendez vous ?')">
		</button>
	</div>
	<div>
        <a href="{{path('/prendre-rdv')}}" class="rdv">Ajouter un rendez vous</a>
	</div>
{% endblock %}
