				</g>
				<defs>
					<filter id="filter0_d_148_74" x="0" y="0" width="38" height="38" filterunits="userSpaceOnUse" color-interpolation-filters="sRGB">
						<feFlood flood-opacity="0" result="BackgroundImageFix"/>
